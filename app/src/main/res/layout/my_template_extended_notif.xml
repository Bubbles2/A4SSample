<?xml version="1.0" encoding="utf-8"?>
<!-- 
 * Example extended notification template (shown in status bar)
 * Can be used to show a custom extended notification (like BigTextStyle,etc..)
 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@id/com_ad4screen_sdk_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@id/com_ad4screen_sdk_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F00"
            android:visibility="visible" />

        <TextView
            android:id="@id/com_ad4screen_sdk_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>